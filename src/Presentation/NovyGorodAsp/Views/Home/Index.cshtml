@using Microsoft.AspNetCore.Mvc.Localization
@model NovyGorodAsp.Models.Home.IndexViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["about-us"];
    ViewBag.MaxWidth = 720;
}

<h1 class="display-4 text-center text-break mb-3">@Localizer["company-name"]</h1>
<p class="text-center">@Localizer["company-summary"]</p>

<hr/>

<h1 class="display-6 text-center text-break">@Localizer["projects"]</h1>
<div class="mb-3">
    @{ await Html.RenderPartialAsync("PostListContainerView", Model.LastProjectsContainer); }
</div>
<div class="d-flex">
    <a class="btn btn-primary mx-auto" style="width: 22rem"
       href="@Url.Action("ViewList", "Post", Model.SearchProjectsRequest)">
        @Localizer["more-about-projects"]
    </a>
</div>

<hr/>

<h1 class="display-6 text-center text-break">@Localizer["theatre"]</h1>
