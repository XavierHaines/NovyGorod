@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NovyGorod.Domain.Models.Posts

<div class="container">
    <nav class="navbar navbar-expand-md navbar-light">
        <a class="navbar-brand p-0" asp-controller="Home" asp-action="Index">
            <img class="align-top img-fluid" style="max-height:60px" src="~/images/logo.png" alt="logo"/>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">О нас</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Post" asp-action="ViewList"
                       asp-route-type="@PostType.Project">
                        Проекты
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Post" asp-action="ViewList"
                       asp-route-type="@PostType.School">
                        Телешкола
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Post" asp-action="ViewList"
                       asp-route-type="@PostType.Theatre">
                        Театр Окна
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Post" asp-action="ViewList"
                       asp-route-type="@PostType.Festival">
                        Фестивали
                    </a>
                </li>
            </ul>
            <div class="dropdown ml-auto">
                <a class="btn btn-sm btn-outline-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Change language
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li>
                        <a class="dropdown-item" href="#">Русский</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">English</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>