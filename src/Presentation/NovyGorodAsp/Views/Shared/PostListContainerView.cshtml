@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NovyGorodAsp.Models.Posts.PostListContainerViewModel

<div class="row justify-content-center row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach (var post in Model.Posts)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@post.Preview.Url" class="card-img-top" alt="preview">
                <div class="card-body d-flex flex-column">
                    <p class="card-text">@post.Title</p>
                    <div class="mt-auto d-flex flex-row">
                        <small class="text-muted my-auto">@post.CreatedAt.Date.ToShortDateString()</small>
                        <a asp-controller="Post" asp-action="View" asp-route-id=@(post.Id)
                           class="card-link ms-auto">
                            Подробнее
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>