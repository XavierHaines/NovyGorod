@model NovyGorodAsp.Models.Posts.PostsViewModel
@{
    var posts = Model.Posts;
    Layout = "_Layout";
    ViewBag.Title = Model.Type;
}

<div class="container p-">
    <div class="row justify-content-center">
        @foreach (var post in posts)
        {
            <div class="card m-2 shadow-sm" style="width: 20rem">
                <img src="@post.Preview.Url" class="card-img-top" alt="preview">
                <div class="card-body d-flex flex-column">
                    <p class="card-text">@post.Title</p>
                    <div class="d-inline-flex mt-auto">
                        <small class="text-muted align-self-center">@post.CreatedAt.Date.ToShortDateString()</small>
                        <a asp-controller="Post" asp-action="View" asp-route-id=@(post.Id)
                           class="align-self-end card-link ml-auto">
                            Подробнее
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>